
@{
    ViewBag.Title = "健康数据";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<style type="text/css">
    #br_all {
        padding: 10px;
    }

    #brab_pic {
        width: 45%;
        height: 300px;
        margin: 0 20px;
        float: left;
    }

    #brab_pics {
        width: 45%;
        height: 300px;
        margin: 0 20px;
        float: right;
    }

    .btn_title {
        background-color: transparent;
        border: none;
        color: black;
        font-size: 16px;
    }

        .btn_title:hover {
            color: black;
        }
</style>
<div id="br_all">
    <div class="bra_body">
        <div>
            <div id="brab_pic"></div>
            <div id="brab_pics"></div>
            <div class="clear"></div>
        </div>
        <div class="layui-row">
            <div class="layui-col-xs6">
                <div class="grid-demo" style="padding:10px;"><table id="tab_list"></table></div>
            </div>
            <div class="layui-col-xs6">
                <div class="grid-demo" style="padding:10px;">
                    <table id="tab_days"></table>
                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/html" id="basetitle">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm btn_title">基础数据</button>
    </div>
</script>
<script type="text/html" id="reporttitle">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm btn_title">平均数据</button>
    </div>
</script>

<script src="~/Scripts/echarts.min.js"></script>
<script type="text/javascript">
    var form = layui.form, laydate = layui.laydate, table = layui.table;
    var curId = 0, date;
    $().ready(function () {


        start = getDateZero();
        end = getDate();
        date = start + "~" + end;
        loadList();
    })

    function loadList() {

        var _id = GetQueryString("deviceId");
        if (_id <= 0) {
            layer.alert("请先绑定设备！", { icon: 5 });
            return;
        }
        var l = layer.load();
        table.render({
            elem: '#tab_list'
            , url: '/Report/AjaxGetHealthList' //数据接口
            , cols: [[ //表头
                {
                    field: 'LastUpdate', title: '测量时间', width: 200, sort: true
                },
                {
                    field: 'Heartbeat', title: '心率', sort: true
                },
                {
                    field: 'Diastolic', title: '舒张压', sort: true
                },
                {
                    field: 'Shrink', title: '收缩压', sort: true
                }
            ]]
            , done: function (res, curr, count) {
                if (res.data.length == 0) {
                    layer.msg("该时间段暂无数据");
                }
                layer.close(l);
                drawPic(res);
                drawPics(res);

                dayTab(res.extend);
            }
            , where: { deviceId: _id, date: date, type: 3 }
            , page: false
            , toolbar: '#basetitle'
            , loading: true
            , defaultToolbar: ['print', 'exports']
        });
    }
    function drawPic(res) {
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('brab_pic'));

        var data = [], data1 = [], data2 = [];
        $.each(res.data, function (index, item) {
            if (item.Heartbeat > 0)
                data.push({
                    name: item.LastUpdate,
                    value: [
                        item.LastUpdate,
                        item.Heartbeat
                    ]
                });
        });
        option = {
            title: {
                text: '心率折线图'
            },
            legend: {
                data: ['心率']
            },
            tooltip: {
                trigger: 'axis',
                formatter: function (params) {
                    var _html = params[0].data.name + "<br/>";
                    _html += "心率：" + params[0].data.value[1] + "<br/>";
                    return _html;

                }
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'time',
                splitLine: {
                    show: false
                }
            },
            yAxis: {
                type: 'value',
                boundaryGap: [0, '100%'],
                splitLine: {
                    show: true
                },
                max: 200
            },
            series: [{
                name: '心率',
                type: 'line',
                showSymbol: false,
                hoverAnimation: false,
                stack: 't',
                data: data
            }
            ]
        };

        myChart.setOption(option);
    }

    function drawPics(res) {
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('brab_pics'));

        var data = [], data1 = [], data2 = [];
        $.each(res.data, function (index, item) {
            if (item.Diastolic > 0) {
                data1.push({
                    name: item.LastUpdate,
                    value: [
                        item.LastUpdate,
                        item.Diastolic
                    ]
                });
                data2.push({
                    name: item.LastUpdate,
                    value: [
                        item.LastUpdate,
                        item.Shrink
                    ]
                });
            }
        });

        option = {
            title: {
                text: '血压折线图'
            },
            legend: {
                data: ['舒张压', '收缩压']
            },
            tooltip: {
                trigger: 'axis',
                formatter: function (params) {
                    var _html = params[0].data.name + "<br/>";
                    _html += "舒张压：" + params[0].data.value[1] + "<br/>";
                    _html += "收缩压：" + params[1].data.value[1] + "<br/>";
                    return _html;

                }
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'time',
                splitLine: {
                    show: false
                }
            },
            yAxis: {
                type: 'value',
                boundaryGap: [0, '100%'],
                splitLine: {
                    show: true
                },
                max: 200
            },
            series: [
                {
                    name: '舒张压',
                    type: 'line',
                    showSymbol: false,
                    hoverAnimation: false,
                    stack: 't1',
                    data: data1
                }
                ,
                {
                    name: '收缩压',
                    type: 'line',
                    showSymbol: false,
                    hoverAnimation: false,
                    stack: 't2',
                    data: data2
                }
            ]
        };

        myChart.setOption(option);
    }

    function dayTab(data) {
        table.render({
            elem: '#tab_days'
            , data: data //数据接口
            , cols: [[ //表头
                {
                    field: 'DateKey', title: '时间段', width: 260, sort: true
                },
                {
                    field: 'Avg', title: '心率', sort: true
                },
                {
                    field: 'Avg3', title: '舒张压', sort: true
                },
                {
                    field: 'Avg2', title: '收缩压', sort: true
                }
            ]]
            , toolbar: '#reporttitle'
            , defaultToolbar: ['print', 'exports']
        });
    }
</script>


