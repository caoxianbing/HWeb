@using HWeb.Entity.WebEntity
@{
    ViewBag.Title = "系统公告";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    List<Notice> ns = ViewBag.Notice as List<Notice>;
    Notice nCur = ns[0];
    ns = ns.Skip(1).ToList();

}
<style type="text/css">
    #ni_all {
        padding:10px;
    }
    .sp_time {
        font-weight:500;
        font-size:14px;
    }
</style>
<div id="ni_all">

    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
        <legend style="color:#1E9FFF">当前公告</legend>
    </fieldset>
    <ul class="layui-timeline">
        <li class="layui-timeline-item">
            <i class="layui-icon layui-timeline-axis"></i>
            <div class="layui-timeline-content layui-text">
                <h3 class="layui-timeline-title">@nCur.Title &nbsp;&nbsp;<i class="sp_time">@nCur.Created.Value.ToString("yyyy-MM-dd HH:mm")</i></h3>
                <p style="max-width:500px;">
                    &nbsp;&nbsp;&nbsp;&nbsp; @nCur.Content
                </p>

            </div>
        </li>

    </ul>

    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
        <legend style="color:#009688">历史公告</legend>
    </fieldset>
    <ul class="layui-timeline">
        @foreach (var n in ns)
        {
        <li class="layui-timeline-item">
            <i class="layui-icon layui-timeline-axis"></i>
            <div class="layui-timeline-content layui-text">
                <h3 class="layui-timeline-title">@n.Title &nbsp;&nbsp;<i  class="sp_time">@n.Created.Value.ToString("yyyy-MM-dd HH:mm")</i></h3>
                <p style="max-width:500px;">
                   &nbsp;&nbsp;&nbsp;&nbsp; @n.Content
                </p>

            </div>
        </li>
        }
      
    </ul>
</div>

